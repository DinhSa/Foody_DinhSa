<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="horizontal"
            android:background="#FF0000"
            android:textSize="20sp">

            <ImageView
                android:id="@+id/back_themdiadiem"
                android:background="@drawable/btn_clicked"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:clickable="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Thêm địa điểm"
                android:textAppearance="@style/CustomTextHeader"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_Gui"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textAppearance="@style/CustomTextHeader"
                android:textColor="@color/white"
                android:text="Gửi"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:layout_weight="11">

                <LinearLayout
                    android:id="@+id/ll_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e7e7e7"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/tv_hinhdaidien"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="Chọn tỉnh/Thành phố"
                        android:textColor="#7e7e7e"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="#70e489"
                        android:layout_margin="4dp"
                        android:text="Việt Nam"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnTP"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="#70e489"
                        android:layout_margin="4dp"
                        android:text="TP.HCM"
                        android:maxLines="1"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnQuan"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="#70e489"
                        android:layout_margin="4dp"
                        android:text="Chọn quận"
                        android:maxLines="1"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e7e7e7"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="Thông tin bắt buộc"
                        android:textColor="#7e7e7e"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.6"
                        app:srcCompat="@drawable/ic_home" />/>

                    <EditText
                        android:background="@android:color/transparent"
                        android:id="@+id/edt_tendiadiem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textColor="#363636"
                        android:textSize="13sp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:hint="Tên địa điểm *"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e7e7e7"></LinearLayout>
                <LinearLayout
                    android:id="@+id/ln_loaihinhdiadiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.6"
                        app:srcCompat="@drawable/ic_loaihinhdiadiem"/>

                    <TextView
                        android:id="@+id/tv_loaihinh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Loại hình địa điểm*"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_vertical|right"
                        android:drawableRight="@drawable/ic_arrow_right"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e7e7e7"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.6"
                        app:srcCompat="@drawable/ic_toado"/>

                    <EditText
                        android:background="@android:color/transparent"
                        android:id="@+id/edt_diachi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textColor="#363636"
                        android:textSize="13sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:hint="Địa chỉ *" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e7e7e7"></LinearLayout>


                <LinearLayout
                    android:id="@+id/ln_TenDuong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.6"
                        app:srcCompat="@mipmap/ic_tenduong"/>

                    <TextView
                        android:id="@+id/tv_TenDuong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Tên đường*"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_vertical|right"
                        android:drawableRight="@drawable/ic_arrow_right"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e7e7e7"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="Thông tin khác"
                        android:textColor="#7e7e7e"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.6"
                        app:srcCompat="@drawable/ic_maybay"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Vị trí bản đồ"
                        android:id="@+id/textView3" />
                    <TextView
                        android:id="@+id/txtHienThiToaDoDiaDiem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_vertical|right"
                        android:text="Lat 0.0-Long 0.0"
                        android:textColor="@color/colorBlack"
                        android:drawableRight="@drawable/ic_arrow_right"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e7e7e7"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.6"
                        app:srcCompat="@drawable/ic_dienthoai"/>

                    <EditText
                        android:background="@android:color/transparent"
                        android:id="@+id/edt_sdt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textColor="#363636"
                        android:textSize="13sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:digits="+1234567890"
                        android:hint="Số điện thoại" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e7e7e7"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.6"
                        app:srcCompat="@drawable/ic_thoigian"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Giờ mở cửa"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtChonGioBatDau"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:layout_weight="14"
                            android:background="#70e489"
                            android:gravity="center_horizontal|center_vertical"
                            android:padding="3dp"
                            android:text="09:00 AM"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:gravity="center"
                            android:text="đến"/>

                        <TextView
                            android:id="@+id/txtChonGioKet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:layout_weight="14"
                            android:background="#70e489"
                            android:gravity="center_horizontal|center_vertical"
                            android:padding="3dp"
                            android:text="09:00 PM"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e7e7e7"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.6"
                        app:srcCompat="@drawable/ic_mucgia"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textColor="@color/colorBlack"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="13sp"
                            android:text="Mức giá" />
                        <EditText
                            android:id="@+id/edt_giathap"
                            android:background="@android:color/transparent"
                            android:padding="10dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColorHint="@color/colorBlack"
                            android:textColorHighlight="#2584f1"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:digits=".1234567890"
                            android:hint="Giá Thấp Nhất "/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:text="đến"/>
                        <EditText
                            android:id="@+id/edt_giacao"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:textColorHint="@color/colorBlack"
                            android:textColorHighlight="#2584f1"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:digits=".1234567890"
                            android:hint="Giá cao nhất"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e7e7e7"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.6"
                        app:srcCompat="@drawable/ic_motadiadiem"/>

                    <EditText
                        android:background="@android:color/transparent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textColor="#363636"
                        android:textSize="13sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:hint="Mô tả ngắn"
                        android:id="@+id/edt_mota" />

                </LinearLayout>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/HinhThemDiaDiem" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcvHienThiHinhAnhDiaDiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#e7e7e7"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/loadDevice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_preview_black"/>
            <ImageView
                android:id="@+id/loadCamera"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_post_review_black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
